@model RelatoriosProtheus.Models.Entities.Funcionarios

@{
    ViewData["Title"] = "Cadastro de Funcionário";
    Layout = "_Layout";
}

<h1>Cadastro de Funcionário</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Empresa" class="form-label"></label>
                <select asp-for="Empresa" class="form-select">
                    <option value="">Selecione uma empresa</option>
                    <option value="1">SENAI</option>
                    <option value="3">SESI</option>
                    <option value="4">IEL</option>
                    <option value="5">FIES</option>
                </select>
                <span asp-validation-for="Empresa" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Matricula" class="form-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Senha" class="form-label"></label>
                <input asp-for="Senha" class="form-control" type="password" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Cadastrar</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
