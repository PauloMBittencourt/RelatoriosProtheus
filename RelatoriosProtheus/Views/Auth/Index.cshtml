@using RelatoriosProtheus.Models.Entities
@model IEnumerable<RelatoriosProtheus.Models.ViewModels.UsuarioViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Perfil> perfis = (List<Perfil>)ViewBag.Perfis;
}


<a type="button"
   class="btn btn-outline-secondary bi bi-person-add mb-2"
   title="Adicionar Novos Usuários"
   href="@Url.Action("Create", "Auth")">
    <span class="ms-2">Cadastrar Novos Usuários</span>
</a>

<table class="table" id="_dataTableUsers">
    <thead>
        <tr>
            <th>
                Matrícula
            </th>
            <th>
                Usuário
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(md => user.Matricula)
                </td>
                <td>
                    <div>
                        @Html.DisplayFor(modelItem => user.Email)
                    </div>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.FuncionarioId" class="btn-actions btn-primary text-center text-decoration-none" style="width: 220px" title="Editar">
                        <i class="bi bi-person-fill-gear"></i>
                        Editar</a>
                    <a asp-action="Perfis" asp-route-id="@user.FuncionarioId" class="btn-actions btn-primary text-center" style="width: 220px" title="Editar Perfis">Perfis</a>
                    <a asp-action="Grupos" asp-controller="Grupos" asp-route-id="@user.FuncionarioId" class="btn-actions btn-primary text-center" style="width: 220px" title="Editar Grupos">Grupos</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $('.btn-check').on('change', function (e) {
                var funcionarioId = $(e.target).data("id");
                var perfil = $(e.target).val();
                var active = $(e.target).prop("checked");
                changePerfil(funcionarioId, perfil, active);
            });

            function changePerfil(funcionarioId, perfil, active) {
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("ChangePerfilUsuario", "Auth")",
                    dataType: "json",
                    data: {
                        FuncionarioId: funcionarioId,
                        Perfil: perfil,
                        active: active
                    },
                }).done(function (data) {
                    console.log('Alteração ' + data);
                });
            }
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#_dataTableUsers").DataTable({
                language:
                {
                    "sEmptyTable": "Nenhum registro encontrado",
                    "sInfo": "Mostrando de _START_ até _END_ de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando 0 até 0 de 0 registros",
                    "sInfoFiltered": "(Filtrados de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sInfoThousands": ".",
                    "sLengthMenu": "_MENU_ resultados por página",
                    "sLoadingRecords": "Carregando...",
                    "sProcessing": "Processando...",
                    "sZeroRecords": "Nenhum registro encontrado",
                    "sSearch": "Pesquisar",
                    "oPaginate": {
                        "sNext": "Próximo",
                        "sPrevious": "Anterior",
                        "sFirst": "Primeiro",
                        "sLast": "Último"
                    },
                    "oAria": {
                        "sSortAscending": ": Ordenar colunas de forma ascendente",
                        "sSortDescending": ": Ordenar colunas de forma descendente"
                    }
                },
                order: [],
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Todos"]],
            });
        });
    </script>
}